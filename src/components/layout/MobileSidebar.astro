---
import { Image } from 'astro:assets';
import logo from '/public/images/logo-56586a.png';
---

<div class="mobile-sidebar" id="mobile-sidebar">
  <div class="sidebar-content">
    <!-- Close Button -->
    <button class="close-btn" aria-label="Close menu" onclick="closeSidebar()">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
    
    <!-- Sidebar Main Content -->
    <div class="sidebar-main">
      <!-- Logo Section -->
      <div class="sidebar-logo">
        <Image 
          src={logo} 
          alt="Helo Creative Agency" 
          width={84} 
          height={29}
        />
      </div>
      
      <!-- Navigation Menu -->
      <nav class="sidebar-nav">
        <h3 class="nav-title">Menu</h3>
        
        <ul class="mobile-nav-list">
          <li class="mobile-nav-item">
            <a href="/" class="mobile-nav-link" onclick="closeSidebar()">
              <span class="nav-text">Home</span>
              <svg class="nav-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8H13M8 3L13 8L8 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
            </a>
          </li>
          
          <li class="mobile-nav-item">
            <a href="/about" class="mobile-nav-link" onclick="closeSidebar()">
              <span class="nav-text">About Us</span>
              <svg class="nav-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8H13M8 3L13 8L8 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
            </a>
          </li>
          
          <li class="mobile-nav-item">
            <a href="/works" class="mobile-nav-link" onclick="closeSidebar()">
              <span class="nav-text">Works</span>
              <svg class="nav-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8H13M8 3L13 8L8 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
            </a>
          </li>
          
          <li class="mobile-nav-item">
            <a href="/contact" class="mobile-nav-link" onclick="closeSidebar()">
              <span class="nav-text">Contact</span>
              <svg class="nav-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8H13M8 3L13 8L8 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
            </a>
          </li>
        </ul>
      </nav>
      

    </div>
  </div>
  
  <!-- Sidebar Border Elements -->
  <div class="sidebar-border-top"></div>
  <div class="sidebar-border-bottom"></div>
</div>

<!-- Overlay -->
<div class="sidebar-overlay" id="sidebar-overlay" onclick="closeSidebar()"></div>

<script>
  function openSidebar() {
    const sidebar = document.getElementById('mobile-sidebar');
    const overlay = document.getElementById('sidebar-overlay');
    
    if (sidebar && overlay) {
      sidebar.classList.add('open');
      overlay.classList.add('open');
      document.body.style.overflow = 'hidden';
    }
  }
  
  function closeSidebar() {
    const sidebar = document.getElementById('mobile-sidebar');
    const overlay = document.getElementById('sidebar-overlay');
    
    if (sidebar && overlay) {
      sidebar.classList.remove('open');
      overlay.classList.remove('open');
      document.body.style.overflow = '';
    }
  }
  
  // Make functions globally available
  window.openSidebar = openSidebar;
  window.closeSidebar = closeSidebar;
  
  // Add event listeners to menu buttons
  document.addEventListener('DOMContentLoaded', () => {
    const menuButtons = document.querySelectorAll('.mobile-menu-btn, .hamburger-btn');
    menuButtons.forEach(button => {
      button.addEventListener('click', openSidebar);
    });
    
    // Add click event to close button
    const closeBtn = document.querySelector('.close-btn');
    if (closeBtn) {
      closeBtn.addEventListener('click', closeSidebar);
    }
    
    // Add click event to overlay
    const overlay = document.getElementById('sidebar-overlay');
    if (overlay) {
      overlay.addEventListener('click', closeSidebar);
    }
  });
</script>

<style>
  .mobile-sidebar {
    position: fixed;
    top: 0;
    right: -360px;
    width: 360px;
    height: 100vh;
    background: #F8F9FA;
    box-shadow: 2px 0px 10px 0px rgba(0, 0, 0, 0.3);
    z-index: 2000;
    transition: right 0.3s ease;
    overflow-y: auto;
  }
  
  .mobile-sidebar.open {
    right: 0;
  }
  
  .sidebar-content {
    padding: 30px;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: -1.2px;
  }
  
  /* Close Button */
  .close-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    cursor: pointer;
    color: #1C1D20;
    padding: 8px;
    transition: all 0.3s ease;
    border-radius: 6px;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .close-btn:hover {
    background: rgba(28, 29, 32, 0.1);
    color: #121212;
  }
  
  /* Sidebar Main */
  .sidebar-main {
    display: flex;
    flex-direction: column;
    gap: 40px;
    flex: 1;
  }
  
  /* Logo Section */
  .sidebar-logo {
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(28, 29, 32, 0.1);
  }
  
  /* Navigation */
  .sidebar-nav {
    flex: 1;
    padding-bottom: 40px;
  }
  
  .nav-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 24px;
    line-height: 1.2;
    color: #1C1D20;
    margin: 0 0 30px 0;
  }
  
  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  .mobile-nav-item {
    border-bottom: 1px solid rgba(28, 29, 32, 0.1);
  }
  
  .mobile-nav-item:last-child {
    border-bottom: none;
  }
  
  .mobile-nav-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 0;
    color: #1C1D20;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .mobile-nav-link:hover {
    color: #121212;
    padding-left: 10px;
  }
  
  .nav-text {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 18px;
    line-height: 1.4;
  }
  
  .nav-arrow {
    transition: transform 0.3s ease;
    opacity: 0.6;
  }
  
  .mobile-nav-link:hover .nav-arrow {
    transform: translateX(5px);
    opacity: 1;
  }
  

  
  /* Border Elements */
  .sidebar-border-top {
    position: absolute;
    top: -20px;
    left: -20px;
    width: 40px;
    height: 40px;
    border: 1px solid #FFFFFF;
    border-radius: 40px;
  }
  
  .sidebar-border-bottom {
    position: absolute;
    bottom: -4px;
    right: -4px;
    width: 8px;
    height: 8px;
    background: #FFFFFF;
    border-radius: 4px;
  }
  
  /* Overlay */
  .sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1500;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .sidebar-overlay.open {
    opacity: 1;
    visibility: visible;
  }
  
  /* Responsive Design */
  @media (max-width: 480px) {
    .mobile-sidebar {
      width: 100vw;
      right: -100vw;
    }
    
    .close-btn {
      right: 20px;
    }
    
    .sidebar-content {
      padding: 20px;
    }
    
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
    
    .gallery-item-tall {
      grid-row: span 1;
    }
  }
</style>
