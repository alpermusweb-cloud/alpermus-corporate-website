      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    border-top: 1px solid #121212;
    padding: 60px 31px 60px 31px;
    margin-top: auto;
  }
  
  .footer-content {
    max-width: 1860px;
    margin: 0 auto;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 370px 1fr;
    gap: 60px;
    align-items: start;
  }
  
  /* Company Info */
  .footer-company {
    display: flex;
    flex-direction: column;
    gap: 19px;
    position: relative;
  }
  
  .footer-logo {
    width: 160px;
    height: 50px;
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .footer-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: left center;
  }
  
  .footer-description {
    padding-bottom: 0.965px;
  }
  
  .footer-description p {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 1.444;
    color: #444444;
    margin: 0;
  }
  
  .footer-contact-cta {
    padding-top: 31px;
  }
  
  .contact-link {
    display: inline-block;
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 1;
    text-transform: uppercase;
    color: #1C1D20;
    text-decoration: none;
    position: relative;
    padding-bottom: 5px;
  }
  
  .contact-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 125px;
    height: 1px;
    background: #1C1D20;
  }
  

  
  /* Footer Columns */
  .footer-columns {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 31px;
  }
  
  .footer-column {
    position: relative;
    padding-left: 8px;
  }
  
  .column-header {
    margin-bottom: 20px;
  }
  
  .column-title {
    font-family: 'Syne', sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 1;
    color: #121212;
    margin: 0;
    margin-bottom: 20px;
  }
  
  .column-border {
    width: 3px;
    height: 100%;
    background: #000000;
    position: absolute;
    left: 0;
    top: 0;
  }
  
  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
  }
  
  .footer-links li {
    display: flex;
    align-items: stretch;
  }
  
  .footer-links a {
    display: flex;
    align-items: center;
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.875;
    color: #444444;
    text-decoration: none;
    padding: 0;
    transition: color 0.3s ease;
    flex: 1;
  }
  
  .footer-links a:hover {
    color: #121212;
  }
  

  
  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .footer-address {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.4375;
    color: #444444;
    font-style: normal;
    margin: 0;
  }
  
  .contact-details {
    display: flex;
    flex-direction: column;
  }
  
  .contact-details a {
    display: flex;
    align-items: center;
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.875;
    color: #444444;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
    .contact-details a:hover {
    color: #121212;
  }
  
  .social-links {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    justify-content: flex-start;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid #121212;
    border-radius: 50%;
    color: #121212;
    transition: all 0.3s ease;
  }
  
  .social-links a:hover {
    background: #121212;
    color: #FFFFFF;
    transform: translateY(-2px);
  }
  
  .social-links svg {
    width: 20px;
    height: 20px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer {
      padding: 50px 30px;
    }
    
    .footer-main {
      grid-template-columns: 1fr;
      gap: 50px;
    }
    
    .footer-company {
      text-align: center;
      max-width: 400px;
      margin: 0 auto;
    }
    
    .footer-columns {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: 40px 20px;
    }
    
    .footer-main {
      gap: 40px;
    }
    
    .footer-company {
      max-width: 100%;
      padding: 30px;
      background: rgba(255, 255, 255, 0.8);
      border: 1px solid #121212;
      border-radius: 12px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    
    .footer-description p {
      font-size: 16px;
      line-height: 1.6;
    }
    
    .footer-description p br {
      display: none;
    }
    
    .footer-contact-cta {
      padding-top: 25px;
    }
    
    .footer-columns {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .footer-column {
      background: rgba(255, 255, 255, 0.8);
      border: 1px solid #121212;
      border-radius: 12px;
      padding: 25px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    
    .column-border {
      display: none;
    }
    
    .column-header {
      margin-bottom: 20px;
      width: 100%;
    }
    
    .column-title {
      font-size: 18px;
      margin-bottom: 0;
      text-align: center;
    }
    
    .footer-links {
      text-align: center;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    
    .footer-links li {
      width: 100%;
      display: flex;
      justify-content: center;
    }
    
    .footer-links a {
      font-size: 15px;
      padding: 8px 0;
      text-align: center;
    }
    
    .contact-info {
      text-align: center;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }
    
    .footer-address {
      font-size: 15px;
      line-height: 1.5;
      text-align: center;
    }
    
    .contact-details {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
    }
    
    .contact-details a {
      font-size: 15px;
      padding: 6px 0;
      text-align: center;
    }
    
    .social-links {
      justify-content: center;
      margin-top: 25px;
    }
  }
</style>
