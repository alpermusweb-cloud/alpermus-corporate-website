<style>
  .locations {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    padding: 80px 30px;
    border-left: 1px solid #121212;
    border-right: 1px solid #121212;
    border-bottom: 1px solid #121212;
    overflow: hidden;
  }
  
  /* Section Header */
  .locations-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .locations-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 64px;
    line-height: 1.2;
    color: #000000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  .locations-content {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
    max-width: 100%;
  }
  
  .location-card {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid #121212;
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    min-height: 320px;
    max-height: 320px;
    transition: all 0.3s ease;
    position: relative;
    flex: 1;
    justify-content: space-between;
  }
  
  .location-card:hover {
    background: rgba(255, 255, 255, 0.95);
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .location-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 1.1;
    color: #000000;
    margin: 0;
    text-align: center;
    border-bottom: 2px solid #121212;
    padding-bottom: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .location-info {
    display: flex;
    flex-direction: column;
    gap: 15px;
    flex: 1;
    justify-content: space-between;
  }
  
  .location-address {
    flex: 1;
  }
  
  .location-address p {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.4;
    color: #444444;
    margin: 0;
    text-align: center;
  }
  
  .location-contact {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: auto;
  }
  
  .location-contact a {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 12px;
    line-height: 1.3;
    color: #121212;
    text-decoration: none;
    text-align: center;
    transition: color 0.3s ease;
    padding: 4px 0;
  }
  
  .location-contact a:hover {
    color: #666666;
  }
  
  /* Responsive Design */
  @media (max-width: 1400px) {
    .locations-title {
      font-size: 54px;
    }
    
    .locations-content {
      grid-template-columns: repeat(4, 1fr);
      gap: 15px;
    }
    
    .location-card {
      padding: 25px 15px;
      min-height: 280px;
      max-height: 280px;
    }
    
    .location-title {
      font-size: 16px;
    }
    
    .location-address p {
      font-size: 13px;
    }
    
    .location-contact a {
      font-size: 11px;
    }
  }
  
  @media (max-width: 1024px) {
    .locations-title {
      font-size: 48px;
    }
    
    .locations-content {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
    
    .location-card {
      padding: 30px 20px;
      min-height: 300px;
      max-height: 300px;
    }
    
    .location-title {
      font-size: 18px;
    }
    
    .location-address p {
      font-size: 14px;
    }
    
    .location-contact a {
      font-size: 12px;
    }
  }
  
  /* Medium screens - smaller font for longer titles */
  @media (max-width: 1200px) {
    .location-title {
      font-size: 14px;
      min-height: 32px;
    }
  }
  
  @media (max-width: 768px) {
    .locations {
      display: none;
    }
  }
  
  @media (max-width: 480px) {
    .locations {
      display: none;
    }
  }
</style>
