---
// Portfolio section with services list and team members
import { Image } from 'astro:assets';
import homeRomford from '/public/images/home-romford1.jpg';
import homeWoodgreen from '/public/images/home-woodgren1.jpg';
import factoryOutlet from '/public/images/factory-outlet1.jpg';
---

<section class="portfolio">
  <div class="container">
    <div class="portfolio-content">
      <!-- Top Section - Intro Text with Services List -->
      <div class="portfolio-intro-section">
        <!-- Left Side - Intro Text -->
        <div class="intro-text-section">
          <h2 class="portfolio-intro-title">
            Home Stores, One Promise:<br>
            Affordable Style for<br>
            Every Home
          </h2>
        </div>
        
        <!-- Right Side - Services List -->
        <div class="services-list-section">
          <div class="services-items">
            <a href="/locations/romford" class="service-item">
              <div class="service-number-container">
                <span class="service-number">01.</span>
                <div class="service-number-underline"></div>
              </div>
              <span class="service-name">Home Store Romford</span>
              <svg class="service-arrow" width="19" height="19" viewBox="0 0 19 19" fill="none">
                <path d="M0.68 0.68L17.64 17.64M10.86 0L17.64 6.79" stroke="currentColor" stroke-width="1"/>
              </svg>
            </a>
            
            <a href="/locations/woodgreen" class="service-item">
              <div class="service-number-container">
                <span class="service-number">02.</span>
                <div class="service-number-underline"></div>
              </div>
              <span class="service-name">Home Store Woodgreen</span>
              <svg class="service-arrow" width="19" height="19" viewBox="0 0 19 19" fill="none">
                <path d="M0.68 0.68L17.64 17.64M10.86 0L17.64 6.79" stroke="currentColor" stroke-width="1"/>
              </svg>
            </a>
            
            <a href="/locations/hammersmith" class="service-item">
              <div class="service-number-container">
                <span class="service-number">03.</span>
                <div class="service-number-underline"></div>
              </div>
              <span class="service-name">Home Store Hammersmith</span>
              <svg class="service-arrow" width="19" height="19" viewBox="0 0 19 19" fill="none">
                <path d="M0.68 0.68L17.64 17.64M10.86 0L17.64 6.79" stroke="currentColor" stroke-width="1"/>
              </svg>
            </a>
            
            <a href="/locations/home-decor" class="service-item">
              <div class="service-number-container">
                <span class="service-number">04.</span>
                <div class="service-number-underline"></div>
              </div>
              <span class="service-name">Home Decor</span>
              <svg class="service-arrow" width="19" height="19" viewBox="0 0 19 19" fill="none">
                <path d="M0.68 0.68L17.64 17.64M10.86 0L17.64 6.79" stroke="currentColor" stroke-width="1"/>
              </svg>
            </a>
            
            <a href="/locations/home-values" class="service-item">
              <div class="service-number-container">
                <span class="service-number">05.</span>
                <div class="service-number-underline"></div>
              </div>
              <span class="service-name">Home Values</span>
              <svg class="service-arrow" width="19" height="19" viewBox="0 0 19 19" fill="none">
                <path d="M0.68 0.68L17.64 17.64M10.86 0L17.64 6.79" stroke="currentColor" stroke-width="1"/>
              </svg>
            </a>
            
            <a href="/locations/pound-shop-hounslow" class="service-item">
              <div class="service-number-container">
                <span class="service-number">06.</span>
                <div class="service-number-underline"></div>
              </div>
              <span class="service-name">Pound Shop Hounslow</span>
              <svg class="service-arrow" width="19" height="19" viewBox="0 0 19 19" fill="none">
                <path d="M0.68 0.68L17.64 17.64M10.86 0L17.64 6.79" stroke="currentColor" stroke-width="1"/>
              </svg>
            </a>
            
            <a href="/locations/factory-outlet" class="service-item">
              <div class="service-number-container">
                <span class="service-number">07.</span>
                <div class="service-number-underline"></div>
              </div>
              <span class="service-name">Factory Outlet</span>
              <svg class="service-arrow" width="19" height="19" viewBox="0 0 19 19" fill="none">
                <path d="M0.68 0.68L17.64 17.64M10.86 0L17.64 6.79" stroke="currentColor" stroke-width="1"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Bottom Section - Team Members Grid -->
      <div class="team-members-section">
        <!-- Team Member Card 1 -->
        <div class="team-member-card">
          <div class="member-image">
            <Image 
              src={homeRomford} 
              alt="Home Store Romford" 
              width={400} 
              height={500}
              class="member-image-actual"
            />
          </div>
          
          <div class="member-info">
            <h3 class="member-name">Home Store</h3>
            <p class="member-role">Romford</p>
          </div>
        </div>
        
        <!-- Team Member Card 2 -->
        <div class="team-member-card">
          <div class="member-image">
            <Image 
              src={homeWoodgreen} 
              alt="Home Store Woodgreen" 
              width={400} 
              height={500}
              class="member-image-actual"
            />
          </div>
          
          <div class="member-info">
            <h3 class="member-name">Home Store</h3>
            <p class="member-role">Woodgreen</p>
          </div>
        </div>
        
        <!-- Team Member Card 3 -->
        <div class="team-member-card">
          <div class="member-image">
            <Image src={factoryOutlet} alt="Factory Outlet" width={400} height={500} class="member-image-actual"/>
          </div>
          
          <div class="member-info">
            <h3 class="member-name">Factory Outlet</h3>
            <p class="member-role">Walthamstow</p>
          </div>
        </div>
        
        <!-- View All Works Card -->
        <div class="view-all-card">
          <a href="/works" class="view-all-link">
            VIEW ALL WORKS
            <div class="view-all-underline"></div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .portfolio {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    padding: 0 1px 1px;
    border-left: 1px solid #121212;
    border-right: 1px solid #121212;
    border-bottom: 1px solid #121212;
    overflow: hidden;
  }
  
  .portfolio-content {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  /* Top Section - Intro with Services */
  .portfolio-intro-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 100px;
    padding: 125px 60px;
    border-bottom: 1px solid #121212;
    min-height: 600px;
  }
  
  .intro-text-section {
    flex: 0 0 auto;
    max-width: 600px;
  }
  
  .portfolio-intro-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 64px;
    line-height: 1.203125;
    color: #000000;
    margin: 0;
  }
  
  /* Services List */
  .services-list-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 50px;
  }
  
  .services-items {
    display: flex;
    flex-direction: column;
    gap: 35px;
  }
  
  .service-item {
    display: flex;
    align-items: center;
    gap: 20px;
    position: relative;
    text-decoration: none;
    color: inherit;
    padding: 15px 0;
    border-radius: 8px;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .service-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateX(10px);
  }
  
  .service-number-container {
    position: relative;
    width: 50px;
    flex-shrink: 0;
    margin-right: 20px;
  }
  
  .service-number {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.8125;
    text-transform: uppercase;
    color: #000000;
    display: block;
    position: relative;
    padding-bottom: 8px;
  }
  
  .service-number-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: #000000;
    transform-origin: left;
    transition: transform 0.4s ease;
  }
  
  .service-item:hover .service-number-underline {
    transform: scaleX(3);
  }
  
  .service-name {
    font-family: 'Syne', sans-serif;
    font-weight: 400;
    font-size: 36px;
    line-height: 0.555556;
    color: #000000;
    flex: 1;
    transition: color 0.3s ease;
  }
  
  .service-item:hover .service-name {
    color: #121212;
  }
  
  .service-arrow {
    width: 19px;
    height: 19px;
    color: #000001;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }
  
  .service-item:hover .service-arrow {
    transform: translateX(8px) scale(1.1);
    color: #000000;
  }
  
  /* Team Members Section */
  .team-members-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
  }
  
  .team-member-card {
    border-right: 1px solid #121212;
    border-bottom: 1px solid #121212;
    padding: 40px !important;
    position: relative;
    display: flex !important;
    flex-direction: column !important;
    gap: 22px !important;
    min-height: 650px !important;
    max-width: 100% !important;
    box-sizing: border-box !important;
  }
  
  .team-member-card:nth-child(2) {
    border-right: none;
  }
  
  .team-member-card:nth-child(3),
  .view-all-card {
    border-bottom: none;
  }
  
  .view-all-card {
    border-right: none;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    min-height: 650px;
  }
  
  .member-image {
    width: 100% !important;
    height: 500px !important;
    margin-bottom: 22px !important;
    max-width: 100% !important;
    min-height: 500px !important;
    overflow: hidden !important;
    box-sizing: border-box !important;
  }
  
  .member-image-placeholder {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
  }
  
  .member-image-actual {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    border-radius: 4px;
    max-width: 100% !important;
    min-width: 100% !important;
    flex-shrink: 0 !important;
  }
  
  .member-info {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .member-name {
    font-family: 'Syne', sans-serif;
    font-weight: 400;
    font-size: 36px;
    line-height: 0.555556;
    color: #000000;
    margin: 0;
  }
  
  .member-role {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 15px;
    line-height: 1.333333;
    color: #000000;
    margin: 0;
    margin-left: 5px;
  }
  
  /* View All Works */
  .view-all-link {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 1.45;
    text-transform: uppercase;
    color: #000000;
    text-decoration: none;
    text-align: center;
    position: relative;
    display: inline-block;
    padding-bottom: 8px;
  }
  
  .view-all-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 2px;
    background: #000000;
    transform-origin: left;
    transition: transform 0.4s ease;
  }
  
  .view-all-link:hover .view-all-underline {
    transform: scaleX(4);
  }
  
  /* Responsive Design */
  @media (max-width: 1200px) {
    .portfolio-intro-section {
      flex-direction: column;
      text-align: center;
      gap: 80px;
      padding: 100px 40px;
    }
    
    .intro-text-section {
      max-width: none;
    }
    
    .services-list-section {
      padding-left: 0;
    }
    
    .portfolio-intro-title {
      font-size: 54px;
    }
    
    .service-name {
      font-size: 28px;
    }
  }
  
  @media (max-width: 768px) {
    .portfolio-intro-section {
      flex-direction: column;
      padding: 60px 20px;
      gap: 50px;
      text-align: center;
    }
    
    .intro-text-section {
      max-width: none;
    }
    
    .services-list-section {
      padding-left: 0;
      max-width: 100%;
    }
    
    .services-items {
      gap: 25px;
    }
    
    .service-item {
      gap: 15px;
      padding: 15px 10px;
      flex-wrap: wrap;
    }
    
    .service-number-container {
      width: 40px;
      margin-right: 15px;
    }
    
    .service-name {
      font-size: 24px;
      flex: 1;
      min-width: 200px;
    }
    
    .service-arrow {
      width: 16px;
      height: 16px;
    }
    
    .team-members-section {
      grid-template-columns: 1fr;
    }
    
    .team-member-card {
      border-right: none;
      border-bottom: 1px solid #121212;
    }
    
    .team-member-card:last-child {
      border-bottom: 1px solid #121212;
    }
    
    .view-all-card {
      border-bottom: none;
    }
    
    .portfolio-intro-title {
      font-size: 42px;
    }
    
    .member-image {
      height: 400px;
    }
    
    .team-member-card,
    .view-all-card {
      min-height: 550px;
    }
    
    .member-name {
      font-size: 28px;
    }
  }
  
  @media (max-width: 480px) {
    .portfolio-intro-section {
      padding: 40px 15px;
      gap: 30px;
    }
    
    .portfolio-intro-title {
      font-size: 28px;
    }
    
    .services-items {
      gap: 20px;
    }
    
    .service-item {
      padding: 12px 5px;
      gap: 12px;
      flex-wrap: nowrap;
    }
    
    .service-number-container {
      width: 35px;
      flex-shrink: 0;
      margin-right: 10px;
    }
    
    .service-number {
      font-size: 14px;
    }
    
    .service-name {
      font-size: 18px;
      flex: 1;
      min-width: 120px;
    }
    
    .service-arrow {
      width: 14px;
      height: 14px;
      flex-shrink: 0;
    }
    
    .team-member-card,
    .view-all-card {
      padding: 30px;
      min-height: 400px;
    }
    
    .member-image {
      height: 300px;
    }
    
    .member-name {
      font-size: 24px;
    }
  }
</style>