---
import { Image } from 'astro:assets';
import teamImage from '/public/images/footer.jpg';
---

<section class="team">
  <div class="container">
    <div class="team-content">
      <!-- Team Title -->
      <div class="team-title-section">
        <h2 class="team-title">
          Stylish Choices at Pocket-Friendly Prices
        </h2>
      </div>
      
      <!-- Full Width Team Image -->
      <div class="team-image-section">
        <div class="team-image-container">
          <Image 
            src={teamImage} 
            alt="Home Store Footer" 
            width={1920} 
            height={600}
            class="team-image"
          />
        </div>
        
        <div class="team-tagline">
          <p>Stop by Our Locations â€“ Your Next Favorite Home Item Awaits!</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .team {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    padding: 110px 30px 100px;
    border-left: 1px solid #121212;
    border-right: 1px solid #121212;
    border-bottom: 1px solid #121212;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  
  .team-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 100%;
    margin: 0 auto;
    gap: 80px;
  }
  
  /* Team Title */
  .team-title-section {
    max-width: 1400px !important;
    margin: 0 auto;
    box-sizing: border-box !important;
  }
  
  .team-title {
    font-family: 'Syne', sans-serif;
    font-weight: 400;
    font-size: 80px;
    line-height: 1.2;
    text-align: center;
    color: #000000;
    margin: 0;
  }
  
  /* Team Image Section */
  .team-image-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }
  
  .team-image-container {
    width: 100%;
    max-width: 1400px !important;
    height: 600px;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    box-sizing: border-box !important;
  }
  
  .team-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .team-tagline {
    margin-top: 20px;
  }
  
  .team-tagline p {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 1.4;
    text-transform: uppercase;
    text-align: center;
    color: #000000;
    margin: 0;
    letter-spacing: 1px;
  }
  
  /* Responsive Design */
  @media (max-width: 1200px) {
    .team {
      padding: 80px 20px;
    }
    
    .team-content {
      gap: 60px;
    }
    
    .team-title {
      font-size: 64px;
      max-width: 800px;
    }
    
    .team-image-container {
      height: 500px;
    }
    
    .team-tagline p {
      font-size: 18px;
      letter-spacing: 0.5px;
    }
  }
  
  @media (max-width: 768px) {
    .team {
      padding: 60px 15px;
    }
    
    .team-content {
      gap: 40px;
    }
    
    .team-title {
      font-size: 48px;
    }
    
    .team-image-container {
      height: 400px;
      border-radius: 8px;
    }
    
    .team-tagline p {
      font-size: 18px;
      letter-spacing: 1px;
    }
  }
  
  @media (max-width: 480px) {
    .team {
      padding: 40px 10px;
    }
    
    .team-title {
      font-size: 36px;
    }
    
    .team-image-container {
      height: 300px;
      border-radius: 6px;
    }
    
    .team-tagline p {
      font-size: 14px;
      letter-spacing: 0.5px;
      line-height: 1.3;
    }
  }
</style>