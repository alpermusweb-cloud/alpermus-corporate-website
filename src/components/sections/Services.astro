---
import { Image } from 'astro:assets';
import featuresImage from '/public/images/section2.jpg';
import icon1 from '/public/images/icon-1.png';
import icon2 from '/public/images/icon-2.png';
import icon3 from '/public/images/icon-3.png';
import icon4 from '/public/images/icon-4.png';
---

<section class="services">
  <div class="container">
    <div class="services-content">
      <!-- Top Section - Intro Text with Image -->
      <div class="services-intro-section">
        <div class="features-image-container">
          <Image 
            src={featuresImage} 
            alt="Home Store Interior" 
            width={400} 
            height={550}
            class="features-image"
          />
        </div>
        
        <div class="intro-content">
          <h2 class="intro-title">
            Hello, Making Your Home<br>
            Feel Right, for Less
          </h2>
          
          <p class="intro-description">
            Hi, I'm Jsc Stf Ltd. I believe a home is more than just a place to live – it's a reflection of who we are. When I started to Home Store shops, my vision was to bring together timeless elegance and everyday comfort. Every piece is thoughtfully chosen to help you create a space that feels warm, welcoming, and uniquely yours.
          </p>
          
          <a href="#about" class="learn-more-link">
            LEARN MORE US
            <div class="learn-more-underline"></div>
          </a>
        </div>
        
        <!-- Decorative Wireframe Element -->
        <div class="wireframe-decoration">
          <svg width="150" height="150" viewBox="0 0 150 150" fill="none" class="wireframe-sphere">
            <!-- Simplified wireframe sphere -->
            <defs>
              <pattern id="smallGrid" width="10" height="10" patternUnits="userSpaceOnUse">
                <path d="M 10 0 L 0 0 0 10" fill="none" stroke="#000" stroke-width="0.2" opacity="0.1"/>
              </pattern>
            </defs>
            <!-- Concentric circles -->
            <circle cx="75" cy="75" r="60" fill="none" stroke="#000" stroke-width="0.6" opacity="0.1"/>
            <circle cx="75" cy="75" r="45" fill="none" stroke="#000" stroke-width="0.5" opacity="0.15"/>
            <circle cx="75" cy="75" r="30" fill="none" stroke="#000" stroke-width="0.4" opacity="0.2"/>
            <!-- Cross lines -->
            <line x1="75" y1="15" x2="75" y2="135" stroke="#000" stroke-width="0.3" opacity="0.15"/>
            <line x1="15" y1="75" x2="135" y2="75" stroke="#000" stroke-width="0.3" opacity="0.15"/>
            <!-- Diagonal lines -->
            <line x1="30" y1="30" x2="120" y2="120" stroke="#000" stroke-width="0.2" opacity="0.1"/>
            <line x1="120" y1="30" x2="30" y2="120" stroke="#000" stroke-width="0.2" opacity="0.1"/>
            <!-- Subtle grid -->
            <rect width="150" height="150" fill="url(#smallGrid)" opacity="0.03"/>
          </svg>
        </div>
      </div>
      
      <!-- Bottom Section - 4 Service Cards in Row -->
      <div class="services-cards-section">
        <!-- Service Card 1: Decoration / Accessories -->
        <div class="service-card">
          <div class="service-image">
            <Image 
              src={icon1} 
              alt="Decoration / Accessories Icon" 
              width={107} 
              height={104}
              class="service-icon"
            />
          </div>
          
          <h3 class="service-title">Decoration / Accessories</h3>
          
          <p class="service-description">
            Finishing Touches that Make the Difference
          </p>
        </div>
        
        <!-- Service Card 2: Kitchen and Table -->
        <div class="service-card">
          <div class="service-image">
            <Image 
              src={icon2} 
              alt="Kitchen and Table Icon" 
              width={107} 
              height={104}
              class="service-icon"
            />
          </div>
          
          <h3 class="service-title">Kitchen and Table</h3>
          
          <p class="service-description">
            Practical Finds for Everyday Meals
          </p>
        </div>
        
        <!-- Service Card 3: Bedroom & Home Textiles -->
        <div class="service-card">
          <div class="service-image">
            <Image 
              src={icon3} 
              alt="Bedroom & Home Textiles Icon" 
              width={107} 
              height={104}
              class="service-icon"
            />
          </div>
          
          <h3 class="service-title">Bedroom & Home Textiles</h3>
          
          <p class="service-description">
            Comfort You Can Count On
          </p>
        </div>
        
        <!-- Service Card 4: Campaign / Discount Section -->
        <div class="service-card">
          <div class="service-image">
            <Image 
              src={icon4} 
              alt="Campaign / Discount Section Icon" 
              width={107} 
              height={104}
              class="service-icon"
            />
          </div>
          
          <h3 class="service-title">Campaign / Discount Section</h3>
          
          <p class="service-description">
            Style for Less – Don't Miss Out!
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .services {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    padding: 0 1px 1px;
    border-left: 1px solid #121212;
    border-right: 1px solid #121212;
    border-bottom: 1px solid #121212;
    overflow: hidden;
  }
  
  .services-content {
    display: flex;
    flex-direction: column;
    gap: 0;
    max-width: 100%;
  }
  
  /* Top Section - Intro with Image */
  .services-intro-section {
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    gap: 100px !important;
    padding: 130px 60px !important;
    border-bottom: 1px solid #121212;
    position: relative;
    min-height: 700px !important;
    box-sizing: border-box !important;
  }
  
  .features-image-container {
    flex: 0 0 auto;
    display: flex;
    justify-content: center;
  }
  
  .features-image {
    width: 700px !important;
    height: 480px !important;
    object-fit: cover !important;
    border-radius: 8px;
    max-width: 700px !important;
    min-width: 700px !important;
    flex-shrink: 0 !important;
  }
  
  .intro-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 40px;
    max-width: 900px;
    min-width: 600px;
    position: relative;
  }
  
  .intro-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 72px;
    line-height: 1.1;
    color: #000000;
    margin: 0;
    margin-bottom: 10px;
    text-align: left;
  }
  
  .intro-description {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 22px;
    line-height: 1.6;
    color: #000000;
    margin: 0;
    margin-bottom: 20px;
    text-align: left;
  }
  
  .learn-more-link {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 1.45;
    text-transform: uppercase;
    color: #000000;
    text-decoration: none;
    align-self: flex-start;
    transition: opacity 0.3s ease;
    position: relative;
    display: inline-block;
    padding-bottom: 8px;
    margin-top: 10px;
    margin-left: 0;
  }
  
  .learn-more-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 2px;
    background: #000000;
    transform-origin: left;
    transition: transform 0.4s ease;
  }
  
  .learn-more-link:hover .learn-more-underline {
    transform: scaleX(4);
  }
  

  
  /* Wireframe Decoration */
  .wireframe-decoration {
    position: absolute;
    bottom: 20px;
    right: 20px;
    width: 150px;
    height: 150px;
    pointer-events: none;
    z-index: 1;
    opacity: 0.2;
    max-width: calc(100% - 40px);
    max-height: calc(100% - 40px);
  }
  
  .wireframe-sphere {
    width: 100%;
    height: 100%;
    opacity: 0.6;
    animation: rotate 20s linear infinite;
  }
  
  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  
  /* Disable animation for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .wireframe-sphere {
      animation: none;
    }
  }
  
  /* Bottom Section - Service Cards */
  .services-cards-section {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
  }
  
  .service-card {
    padding: 60px 40px;
    border-right: 1px solid #121212;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 20px;
    min-height: 450px;
    transition: background-color 0.3s ease;
    align-items: flex-start;
  }
  
  .service-card:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
  
  .service-card:last-child {
    border-right: none;
  }
  
  .service-title {
    font-family: 'Syne', sans-serif;
    font-weight: 400;
    font-size: 36px;
    line-height: 1.2;
    color: #000000;
    margin: 0;
    margin-bottom: 20px;
  }
  
  .service-description {
    font-family: 'Syne', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.5;
    color: #000000;
    margin: 0;
    flex: 1;
    min-height: 60px;
    display: block;
    text-align: left;
    margin-top: 10px;
    padding-top: 5px;
  }
  
  .service-image {
    width: 107px;
    height: 104px;
    margin-bottom: 20px;
    order: -1;
  }
  
  .service-icon {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }
  
  /* Responsive Design */
  @media (max-width: 1200px) {
    .services-intro-section {
      flex-direction: column;
      text-align: center;
      gap: 60px;
      padding: 100px 40px;
    }
    
    .features-image-container {
      flex: none;
    }
    
    .intro-content {
      flex: none;
      padding-left: 0;
      max-width: none;
      min-width: auto;
      align-items: center;
    }
    
    .intro-title,
    .intro-description {
      text-align: center;
    }
    
    .wireframe-decoration {
      display: none;
    }
    
    .services-cards-section {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .service-card {
      border-bottom: 1px solid #121212;
    }
    
    .service-card:nth-child(even) {
      border-right: none;
    }
    
    .service-card:nth-child(3),
    .service-card:nth-child(4) {
      border-bottom: none;
    }
    
    .features-image {
      width: 600px;
      height: 450px;
    }
    
    .intro-title {
      font-size: 54px;
    }
    
    .intro-description {
      font-size: 20px;
    }
  }
  
  @media (max-width: 768px) {
    .services-intro-section {
      padding: 80px 30px;
      gap: 40px;
    }
    
    .services-cards-section {
      grid-template-columns: 1fr;
    }
    
    .service-card {
      padding: 50px 30px;
      border-right: none;
      border-bottom: 1px solid #121212;
      min-height: 350px;
    }
    
    .service-card:last-child {
      border-bottom: none;
    }
    
    .service-title {
      font-size: 28px;
    }
    
    .service-description {
      font-size: 15px;
      align-items: flex-start;
      text-align: left;
    }
    
    .intro-title {
      font-size: 42px;
    }
    
    .intro-description {
      font-size: 18px;
    }
    
    .features-image {
      width: 400px;
      height: 360px;
    }
  }
  
  @media (max-width: 480px) {
    .services-intro-section {
      padding: 60px 20px;
      gap: 30px;
    }
    
    .intro-title {
      font-size: 32px;
    }
    
    .intro-description {
      font-size: 16px;
    }
    
    .features-image {
      width: 320px;
      height: 300px;
    }
    
    .service-card {
      padding: 40px 25px;
      min-height: 300px;
    }
    
    .service-title {
      font-size: 24px;
    }
    
    .service-description {
      font-size: 14px;
      align-items: flex-start;
      text-align: left;
    }
  }
</style>