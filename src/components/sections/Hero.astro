---
import { Image } from 'astro:assets';
import heroImage from '/public/images/header.jpg';
import moveAImage from '/public/images/moveA-56586a.png';
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <!-- Main Hero Text Section -->
      <div class="hero-text-section">
        <div class="hero-main-title">
          <div class="title-container">
            <h1 class="hero-title">Hello,<br>Making Your Home<br>Feel Right, for Less</h1>
          </div>
        </div>
        

      </div>
      
      <!-- Hero Image Section -->
      <div class="hero-image-section">
        <div class="hero-image-container">
          <Image 
            src={heroImage} 
            alt="Home Store Header" 
            width={1798} 
            height={799}
            loading="eager"
            class="hero-image"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    padding: 81px 31px;
    border: 1px solid #121212;
    margin-top: 60px; /* Account for fixed header */
    overflow: hidden;
  }
  
  .hero-content {
    display: flex;
    flex-direction: column;
    max-width: 1500px !important;
    margin: 0 auto;
    box-sizing: border-box !important;
  }
  
  /* Main Text Section */
  .hero-text-section {
    width: 100% !important;
    max-width: 1200px !important;
    margin-bottom: 30px;
    position: relative;
    box-sizing: border-box !important;
  }
  
  .hero-main-title {
    display: flex;
    flex-direction: column;
  }
  
  .title-container {
    width: 100%;
  }
  
  .hero-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 110px;
    line-height: 1.1;
    color: #121212;
    margin: 0;
    text-align: left;
  }
  

  

  
  /* Hero Image Section */
  .hero-image-section {
    border: 1px solid #121212;
    padding: 30px 31px 31px;
  }
  
  .hero-image-container {
    width: 100%;
    height: 799px;
    overflow: hidden;
  }
  
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  /* Responsive Design */
  @media (max-width: 1200px) {
    .hero-title {
      font-size: 80px;
      line-height: 1.1;
    }
    
    .hero-text-section {
      width: 100%;
      max-width: 1000px;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 60px 20px 40px;
      margin-top: 90px;
    }
    
    .hero-title {
      font-size: 36px;
      line-height: 1.1;
      margin-bottom: 20px;
    }
    
    .hero-image-container {
      height: 400px;
    }
    
    .hero-text-section {
      width: 100%;
      max-width: 100%;
      margin-bottom: 40px;
      padding: 0 10px;
    }
  }
  
  @media (max-width: 480px) {
    .hero {
      padding: 50px 15px 30px;
      margin-top: 80px;
    }
    
    .hero-title {
      font-size: 28px;
      line-height: 1.1;
      margin-bottom: 20px;
    }
    
    .hero-image-container {
      height: 300px;
    }
    
    .hero-text-section {
      margin-bottom: 30px;
      width: 100%;
      max-width: 100%;
      padding: 0 5px;
    }
  }
</style>
