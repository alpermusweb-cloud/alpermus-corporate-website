<style>
  .contact-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    margin-top: 60px;
  }
  
  /* Contact Hero */
  .contact-hero {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    padding: 120px 60px;
    border-left: 1px solid #121212;
    border-right: 1px solid #121212;
    border-bottom: 1px solid #121212;
    overflow: hidden;
  }
  
  .contact-hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 100px;
    max-width: 1600px;
    margin: 0 auto;
  }
  
  .hero-text {
    flex: 1;
    max-width: 700px;
  }
  
  .contact-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 72px;
    line-height: 1.1;
    color: #000000;
    margin: 0 0 40px 0;
  }
  
  .contact-description {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 22px;
    line-height: 1.6;
    color: #444444;
    margin: 0 0 60px 0;
  }
  
  .contact-highlights {
    display: flex;
    gap: 50px;
  }
  
  .highlight-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .highlight-number {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 36px;
    line-height: 1;
    color: #000000;
  }
  
  .highlight-text {
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 14px;
    color: #666666;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .hero-image {
    flex-shrink: 0;
  }
  
  .contact-hero-image {
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  /* Contact Form Section */
  .contact-form-section {
    background: linear-gradient(135deg, #FCF9F4 0%, #FFFFFF 100%);
    padding: 100px 60px;
    border-left: 1px solid #121212;
    border-right: 1px solid #121212;
    border-bottom: 1px solid #121212;
    overflow: hidden;
  }
  
  .form-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .form-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .form-title {
    font-family: 'Syne', sans-serif;
    font-weight: 500;
    font-size: 48px;
    line-height: 1.2;
    color: #000000;
    margin: 0 0 20px 0;
  }
  
  .form-description {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 1.6;
    color: #444444;
    margin: 0;
  }
  
  .contact-form {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #121212;
    border-radius: 16px;
    padding: 50px;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .form-label {
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 14px;
    color: #121212;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .form-input,
  .form-select,
  .form-textarea {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: #121212;
    background: #FFFFFF;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 15px 20px;
    transition: all 0.3s ease;
    outline: none;
  }
  
  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    border-color: #121212;
    box-shadow: 0 0 0 3px rgba(18, 18, 18, 0.1);
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }
  
  .form-submit {
    background: transparent;
    color: #121212;
    border: 2px solid #121212;
    padding: 18px 40px;
    border-radius: 8px;
    font-family: 'DM Sans', sans-serif;
    font-weight: 600;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
    align-self: center;
    margin-top: 20px;
    padding-bottom: 26px;
  }
  
  .submit-underline {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
